  <page>
    <title>Apple Computer</title>
    <id>856</id>
    <revision>
      <id>42159476</id>
      <timestamp>2006-03-04T05:21:49Z</timestamp>
      <contributor>
        <username>Hohohob</username>
        <id>354391</id>
