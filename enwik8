  <page>
    <title>Amateur astronomy</title>
    <id>748</id>
    <revision>
      <id>42139829</id>
      <timestamp>2006-03-04T02:08:03Z</timestamp>
      <contributor>
        <username>Mozasaur</username>
        <id>475997</id>
